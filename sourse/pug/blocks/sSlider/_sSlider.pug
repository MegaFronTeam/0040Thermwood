mixin sSlider()
	+b.sSlider.section#sSlider&attributes(attributes)
		.container
			+b.section-title
				h2 проекты
			+e.slider--proj-js.swiper
				.swiper-wrapper
					- for (var x = 1; x < 4; x++)
						+e.slide.swiper-slide
							+e.item(href=`img/project-sl-${x}.png` data-fancybox="project-sl")
								+img(`img/project-sl-${x}.png`, 'bg')
								.swiper-lazy-preloader
					- for (var x = 1; x < 4; x++)
						+e.slide.swiper-slide
							+e.item(href=`img/project-sl-${x}.png` data-fancybox="project-sl")
								+img(`img/project-sl-${x}.png`, 'bg')
								.swiper-lazy-preloader
					- for (var x = 1; x < 4; x++)
						+e.slide.swiper-slide
							+e.item(href=`img/project-sl-${x}.png` data-fancybox="project-sl")
								+img(`img/project-sl-${x}.png`, 'bg')
								.swiper-lazy-preloader
					- for (var x = 1; x < 4; x++)
						+e.slide.swiper-slide
							+e.item(href=`img/project-sl-${x}.png` data-fancybox="project-sl")
								+img(`img/project-sl-${x}.png`, 'bg')
								.swiper-lazy-preloader
				.swiper-pagination.swiper-pagination-fraction.swiper-pagination-horizontal
				.swiper-button-prev
					+icon('sw-left')
				.swiper-button-next
					+icon('sw-right')


mixin paletteItem(img, title, letter)
	+e.slide.swiper-slide
		+b.palette-item(href='#')
			+img(`img/palette-1-0${img}.png`, 'bg')
			+e.title!= title

