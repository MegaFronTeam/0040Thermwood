include ../blocks/sTableBlock/_sTableBlock.pug
include ../blocks/sProjects/_sProjects.pug
include ../blocks/sContent/_sContent.pug
include ../blocks/sCatalogPage/_sCatalogPage.pug
include ../blocks/sWhatCovering/_sWhatCovering.pug
include ../blocks/sRecommendation/_sRecommendation.pug
