extends ../layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'Модальные окна'
	title= title
block pagecontent
	//- +topLine()
	main
		.section.container
			h1 Страница для  демонстрации модальных окон
			.row
				mixin btn(id, name)
					.col-auto.mb-2
						button.btn.btn-primary(data-src=id data-fancybox).btn-modal-js= name
				+btn("#modal-call", "modal-call")
				+btn("#modal-questions", "modal-questions")
				+btn("#modal-questions2", "modal-questions2")
				+btn("#modal-call", "Оставьте заявку")
				+btn("#modal-socials", "Напишите нам")
				+btn("#modal-accepted", "Обращение принято")
	+parts('footer')